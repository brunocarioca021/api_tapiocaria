{
  "openapi": "3.0.0",
  "info": {
    "title": "API Tapiocaria Abacate",
    "description": "API para CRUD de tapiocas e carrinho de compras",
    "termsOfService": "",
    "contact": {
      "email": "brunocarioca021@gmail.com"
    },
    "version": "1.0.0"
},
  "servers": [
    {
      "url": "https://api-tapiocaria-abacate.herokuapp.com/api-docs/",
      "description": "API de produção"
    },
    {
      "url": "http://localhost:3001/tapiocas/api-docs/",
      "description": "API de teste"
    }
  ],
  "paths": {
    "/user/create": {
      "post": {
        "summary": "Criar um novo usuário",
        "description": "Rota responsável por criar um novo usuário",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "User": {
                  "value": {
                    "name": "Bruno Dutra",
                    "username": "carioca021",
                    "email": "carioca021@gmail.com",
                    "password": "12345",
                    "avatar": "https://i.imgur.com/Ry1cb5M.png"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Not Found"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schemma": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/user/findAll": {
      "get": {
        "summary": "Buscar todos os usuários",
        "description": "Rota responsável por buscar todos os usuários",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "400": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Entrar na Tapiocaria",
        "description": "Rota responsável fazer o login de um user cadastrado",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "User": {
                  "value": {
                    "email": "carioca021@gmail.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/tapiocas/tapi/": {
      "get": {
        "summary": "Lista de todas as tapiocas",
        "description": "Rota responsável por listar todas as tapiocas",
        "tags": ["Tapiocas"],
        "responses": {
          "404": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tapiocas"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tapiocas/tapi/{id}": {
      "get": {
        "summary": "Busca uma tapioca pelo ID",
        "description": "Rota responsável por buscar uma tapioca pelo ID",
        "tags": ["Tapiocas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da tapioca para a busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Tapiocas"
                }
              }
            }
          }
        }
      }
    },
    "/tapiocas/create": {
      "post": {
        "summary": "Cadastrar uma tapioca",
        "description": "Rota responsável por cadastrar uma tapioca",
        "tags": ["Tapiocas"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Tapiocas"
              },
              "examples": {
                "Paletas": {
                  "value": {
                    "sabor": "Charque com Queijo",
                    "descricao": "Tapioca com queijo coalho mais charque",
                    "preco": 15
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Tapiocas"
                }
              }
            }
          }
        }
      }
    },
    "/tapiocas/update/{id}": {
      "put": {
        "summary": "Editar uma tapioca pelo ID",
        "description": "Rota responsável por editar uma tapioca pelo ID",
        "tags": ["Tapiocas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da tapioca para a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Tapiocas"
              },
              "examples": {
                "Paletas": {
                  "value": {
                    "sabor": "Queijo, coco e charque",
                    "descricao": "Tapioca com quijo coalho mais coco e charque",
                    "preco": 10
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Tapiocas"
                }
              }
            }
          }
        }
      }
    },
    "/tapiocas/delete/{id}": {
      "delete": {
        "summary": "Apagar uma tapioca pelo ID",
        "description": "Rota responsável por apagar uma tapioca pelo ID",
        "tags": ["Tapiocas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da tapioca para deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/all-carrinho": {
      "get": {
        "summary": "Lista de todos os itens do carrinho",
        "description": "Rota responsável por listar todos os itens do carrinho",
        "tags": ["Carrinho"],
        "responses": {
          "404": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Carrinho"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/create-carrinho": {
      "post": {
        "summary": "Cadastrar vários itens no carrinho",
        "description": "Rota responsável por cadastrar vários itens no carrinho",
        "tags": ["Carrinho"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Carrinho"
              },
              "examples": {
                "Carrinho": {
                  "value": [
                    {
                      "tapiocaId": "624230fdcd38269205c82197",
                      "quantidade": 5
                    },
                    {
                      "tapiocaId": "62423c1e618f4a4738a5ee75",
                      "quantidade": 2
                    }
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Carrinho"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/finish-carrinho": {
        "delete": {
          "summary": "Apagar todos os itens do carrinho",
          "description": "Rota responsável por apagar todos os itens do carrinho",
          "tags": ["Carrinho"],
          "responses": {
            "400": {
              "description": "Bad Request"
            },
            "200": {
              "description": "OK"
            }
          }
        }
      }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Tapiocas": {
        "type": "object",
        "properties": {
          "sabor": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "preco": {
            "type": "number"
          }
        }
      },
      "Carrinho": {
        "type": "object",
        "properties": {
          "tapiocaId": {
            "type": "string"
          },
          "quantidade": {
            "type": "number"
          }
        }
      }
    }
  }
}
